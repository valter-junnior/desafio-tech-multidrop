// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  PARTNER
  CUSTOMER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      UserRole
  createdAt DateTime @default(now())

  // Relações
  salesAsCustomer Sale[] @relation("CustomerSales")
  salesAsPartner  Sale[] @relation("PartnerSales")

  @@map("users")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relações
  sales Sale[]

  @@map("products")
}

model Sale {
  id         Int      @id @default(autoincrement())
  value      Float
  createdAt  DateTime @default(now())
  
  // Foreign keys
  productId  Int
  customerId Int
  partnerId  Int

  // Relações
  product  Product @relation(fields: [productId], references: [id])
  customer User    @relation("CustomerSales", fields: [customerId], references: [id])
  partner  User    @relation("PartnerSales", fields: [partnerId], references: [id])

  @@map("sales")
}
